{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"experimentalScannerIgnores": ["node_modules/**", "dist/**", "build/**"],
		"includes": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
		"maxSize": 1000000
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error"
			},
			"a11y": {
				"useAltText": "error",
				"useButtonType": "error"
			},
			"performance": {
				"noAccumulatingSpread": "error"
			},
			"style": {
				"useConsistentArrayType": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
