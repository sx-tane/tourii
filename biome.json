{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			"dist/**",
			"build/**"
		],
		"include": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx"
		],
		"maxSize": 1000000
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error"
			},
			"a11y": {
				"useAltText": "error",
				"useButtonType": "error"
			},
			"performance": {
				"noAccumulatingSpread": "error"
			},
			"style": {
				"useConsistentArrayType": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}